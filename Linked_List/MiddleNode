# Definition for singly-linked list.
# class ListNode:
#     def __init__(self, val=0, next=None):
#         self.val = val
#         self.next = next
class Solution:
    def middleNode(self, head: Optional[ListNode]) -> Optional[ListNode]:
        if not head.next:
            return head
        current = head
        temp = head
        length = 0
        while temp:
            length += 1
            temp = temp.next
        step = (length//2)+1
        while step>1:
            current = current.next
            step -= 1
        return current
