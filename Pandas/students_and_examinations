import pandas as pd

def students_and_examinations(students: pd.DataFrame, subjects: pd.DataFrame, examinations: pd.DataFrame) -> pd.DataFrame:
    df = examinations.groupby('student_id')['subject_name'].value_counts().reset_index().rename(columns={'count': 'attended_exams'})
    df1 = students.merge(subjects, how='cross').merge(df, how='left').sort_values(by=['student_id', 'subject_name'])
    df1['attended_exams'].fillna(0,inplace=True)
    return df1
