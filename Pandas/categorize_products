import pandas as pd

def categorize_products(activities: pd.DataFrame) -> pd.DataFrame:
    activities.drop_duplicates(inplace=True)
    data = activities.groupby('sell_date')['product'].apply(lambda x:", ".join(x)).reset_index()
    data1 = activities.groupby('sell_date').count().reset_index()
    result = data1.merge(data,on='sell_date')
    result.rename(columns={'product_x':'num_sold','product_y':'products'},inplace=True)
    result.sort_values(by='sell_date',inplace=True)
    result["products"] = (result["products"].apply(lambda x: ",".join(sorted([p.strip() for p in x.split(",")]))))
    return result
    
    
